<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="mysStc" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Moyasser StcPay</label>

                <field id="active" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <config_path>payment/mysStc/active</config_path>
                </field>

                <field id="title" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Title</label>
                    <config_path>payment/mysStc/title</config_path>
                </field>


                <field id="SecretKey" translate="label" type="password" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Secret Key </label>
                    <comment>Provided from Moyasser Dashboard</comment>
                    <config_path>payment/mysStc/SecretKey</config_path>
                </field>

                <field id="PublishableKey" translate="label" type="password" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Publishable Key</label>
                    <comment>Provided from Moyasser Dashboard</comment>
                    <config_path>payment/mysStc/PublishableKey</config_path>
                </field>

            </group>
        </section>
    </system>
</config>